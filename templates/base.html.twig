<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ preload(asset('assets/css/bootstrap.min.css')) }}">
            <link rel="stylesheet" href="{{ preload(asset('assets/css/front.app.css')) }}">
        {% endblock %}

    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}
            <script src="{{ preload(asset('assets/js/jQuery.min.js')) }}"></script>
            <script src="{{ preload(asset('assets/js/popper.min.js')) }}"></script>
            <script src="{{ preload(asset('assets/js/bootstrap.min.js')) }}"></script>
            <script src="{{ preload(asset('assets/js/app_backend.js')) }}"></script>
            <script>
                $(function () {
                    Backend.enableEmbedAdd();
                    Backend.enableEmbedRemove();
                });
            </script>
        {% endblock %}

    </body>
</html>
